<div id="signup_modal" class="modal fade" role="dialog">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">Registration</h4>
      </div>
      <div class="modal-body">

        <div class="row">
          <div class="" id="signup_form">
            <input autofocus="autofocus" class="form-control input-sm"
              placeholder="Your Name" type="text" name="user[name]" id="user_name">
            <input class="form-control input-sm" placeholder="Your Email"
              type="email" value="" name="user[email]" id="user_email">
            <input autocomplete="off" class="form-control input-sm"
              placeholder="Password" type="password" name="user[password]" id="user_password">
            <input autocomplete="off" class="form-control input-sm"
              placeholder="Password Confirmation" type="password"
              name="user[password_confirmation]" id="user_password_confirmation">
          </div>
        </div>

      </div>
      <div class="modal-footer">
        <input type="submit" name="commit" value="Create my account" class="btn btn-info btn-block">
        <p>OR</p>
        <a class="btn btn-success btn-block" href="#" data-toggle="modal"
          data-target="#signin_modal" onclick="switch_to_signin()">Do you want login?</a>
      </div>
    </div>
  </div>
</div>
