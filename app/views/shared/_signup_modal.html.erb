<div id="signup_modal" class="modal fade" role="dialog">
  <div class="modal-dialog">
    <div class="modal-content">
      <%= form_for @user, remote: true do |f| %>
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal">&times;</button>
          <h4 class="modal-title">Registration</h4>
        </div>
        <div class="modal-body">
          <div class="row">
            <div class="" id="signup_form">
              <%= f.text_field :name, placeholder: "Your Name", class: "form-control input-sm" %>
              <%= f.email_field :email, placeholder: "Your Email", class: "form-control input-sm" %>
              <%= f.password_field :password, placeholder: "Password", class: "form-control input-sm" %>
              <%= f.password_field :password_confirmation, placeholder: "Password Confirmation", class: "form-control input-sm" %>
            </div>
          </div>
        </div>

        <div class="modal-footer">
          <%= f.submit "Create my account", {class: "btn btn-info btn-block", onclick: "check_signup(#{@user.errors.full_messages.count})"} %>
          <p>OR</p>
          <a class="btn btn-success btn-block" href="#" data-toggle="modal"
            data-target="#signin_modal" onclick="switch_to_signin()">Do you want login?</a>
        </div>
      <% end %>
    </div>
  </div>
</div>
